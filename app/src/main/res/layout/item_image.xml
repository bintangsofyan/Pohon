<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_survey"
        android:layout_width="wrap_content"
        android:layout_below="@+id/date_img"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/id_pohon"
    android:layout_width="wrap_content"
        android:layout_below="@+id/date_img"
    android:layout_height="wrap_content"
    android:visibility="gone"/>



    <TextView
        android:id="@+id/tgl_image"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toRightOf="@+id/item_img_icon"
        android:layout_toEndOf="@+id/item_img_icon" />




</RelativeLayout>