<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">
    <TextView
        android:id="@+id/idSurvey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/namaPohon"
        android:text = "Nama Pohon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dip"
        android:paddingTop="6dip"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kodePohon"
        android:paddingLeft="20dip"
        android:paddingTop="6dip"
        android:paddingBottom="10dp"
        android:textSize="12dp"
        android:text="Kode Pohon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namaPohon"
        android:layout_toRightOf="@+id/idSurvey"
        android:layout_toEndOf="@+id/idSurvey" />

</RelativeLayout>