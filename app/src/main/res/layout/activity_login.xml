<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/logtxtLevel"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            app:met_baseColor="#000033"
            app:met_primaryColor="#fc80"
            app:met_errorColor="#f22a37"
            app:met_floatingLabel="highlight"
            app:met_iconLeft="@mipmap/ic_email"
            android:inputType="text"
            android:id="@+id/logtxtEmail"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/titleLogin1" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:met_baseColor="#000033"
            app:met_primaryColor="#fc80"
            app:met_errorColor="#f22a37"
            app:met_floatingLabel="highlight"
            app:met_iconLeft="@mipmap/ic_lock"
            android:inputType="textPassword"
            android:id="@+id/logtxtPassword"
            android:layout_below="@+id/logtxtEmail" />



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:background="#549788"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:id="@+id/logbtnLogin"
            android:layout_below="@+id/logtxtPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleLogin1"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="TREE MONITORING SYSTEM"
            android:layout_below="@+id/titleLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:foregroundGravity="center"
            android:layout_marginTop="47dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleLogin"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="GAIA"
            android:layout_below="@+id/logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleLogin2"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Gaia Eko Daya Buana"
            android:layout_below="@+id/logbtnLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
